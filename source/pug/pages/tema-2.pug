                        iframe.embed-responsive-item(width='560', height='315', src='https://www.youtube.com/embed/k6tgb1E5EQw', frameborder='0', allow='accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture', allowfullscreen='')

